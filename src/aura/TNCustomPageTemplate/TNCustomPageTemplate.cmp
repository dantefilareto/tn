<aura:component implements="lightning:appHomeTemplate" description="App page with 2 columns." access="global" >
    <aura:attribute name="sidebar" type="Aura.Component[]" description="Left region"/>
    <aura:attribute name="details" type="Aura.Component[]" description="Right main region"/>
    <aura:attribute name="related" type="Aura.Component[]" description="Right main region"/>
    <div>
        <lightning:layout class="slds-m-top_medium">
            <lightning:layoutItem flexibility="grow" size="{! $Browser.formFactor=='DESKTOP' ? '2' : '6' }" class="slds-m-right_small">
                {!v.sidebar}
            </lightning:layoutItem>
            <lightning:layoutItem flexibility="grow" class="slds-m-left_small">
                <div>
                    {!v.details}
                </div>
                <div>
                    {!v.related}
                </div>
            </lightning:layoutItem>
        </lightning:layout>
    </div>
</aura:component>